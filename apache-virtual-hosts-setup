# Create linux user accounts
sudo adduser -m userA
sudo adduser -m userB

# Create user directory
sudo mkdir /home/userA/public_html
sudo mkdir /home/userB/public_html

# Create index.html files inside public_html folders
sudo vim /home/userA/public_html/index.html
sudo vim /home/userB/public_html/index.html

# Go to apache2 directory
cd /etc/apache2/sites-available/

# Find and copy config file named 000-default.confs for the 2 users
cp 000-default.confs userA.conf
cp 000-default.confs userB.conf

# Edit configuration files as follow
sudo vim userA.conf
sudo vim userB.conf

Example begining of the file!!! NOTE PORT
<VirtualHost *:80>

# Change DocumentRoot
DocumentRoot  /home/userA/public_html/
DocumentRoot  /home/userB/public_html/

# Add ServerName
ServerName  userA.com
ServerAlias www.userA.com

ServerName  userB.com
ServerAlias www.userB.com

# Add <Directory> below DocumentRoot

<Directory /home/userA/public_html/>
  Options Indexes FollowSymLinks
  AllowOverride all ( allow htaccess to override default apache conf on a directory bases )
  Require all granted
</Directory>

# Do the same for userB

<Directory /home/userB/public_html/>
  Options Indexes FollowSymLinks
  AllowOverride all ( allow htaccess to override default apache conf on a directory bases )
  Require all granted
</Directory>

# Enable both sites

sudo a2ensite userA.conf
sudo a2ensite userB.conf

# Restart apache2 service
systemctl reload apache2

# Modify hosts file
127.0.0.1 userA.com
127.0.0.1 userB.com














